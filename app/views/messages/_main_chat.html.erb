<div class="main_header">
  <div class="main_header_btn">
    <div class="main_header_left">
      <div class="main_header_chat_name">
        <%= @room.name %>
      </div>
    </div>
    <div class="main_header_right">
      <div class="main_header_chat_btn">
        <a href="#">チャットを終了する</a>
      </div>
    </div>
  </div>
</div>
<div class="main_main">
  <%= render partial: 'message', collection: @messages %>
</div>
<div class="main_footer">
  <%= form_with model: [@room, @message], class: 'main_footer_contact-form', local: true do |f| %>
    <div class=main_footer_input>
      <%= f.text_field :content, class: 'main_footer_name_form', placeholder: 'type a message' %>
      <label class="main_footer_form-image">
        <span class="main_footer_image_file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'main_footer_send' %>
  <% end %>
</div>