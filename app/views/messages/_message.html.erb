<div class="main_main_messages">
  <div class="main_main_name_time">
    <div class="main_main_name">
      <%= message.user.username %>
    </div>
    <div class="main_main_time">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="main_main_message">
    <%= message.content %>
  </div>
  <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
</div>