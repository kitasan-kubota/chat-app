<div class="side_bar_header">
  <div class="side_bar_btn">
    <div class="user_name">
      <%= link_to "#{current_user.username}", edit_user_path(current_user) %>
    </div>
    <div class="chat_btn">
      <%= link_to "チャットを作成する", new_room_path %>
    </div>
  </div>
</div>
<div class="side_bar_main">
  <% current_user.rooms.each do |room| %>
    <div class="side_bar_chat_room">
      <%= link_to "#{room.name}", room_messages_path(room) %>
    </div>
  <% end %>
</div>